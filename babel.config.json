{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "20"
        },
        "modules": "commonjs"
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-proposal-optional-chaining",
    "@babel/plugin-proposal-nullish-coalescing-operator"
  ],
  "ignore": [
    "**/*.test.js",
    "**/*.spec.js",
    "**/node_modules/**",
    "**/dist/**",
    "**/logs/**",
    "**/scripts/**"
  ]
}
